<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/master_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/master_detail_fragment"
        android:name="com.arunditti.android.bakingapp.ui.fragments.DetailActivityFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"/>

    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/recipe_step_fragment"
        android:name="com.arunditti.android.bakingapp.ui.fragments.RecipeStepFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>
